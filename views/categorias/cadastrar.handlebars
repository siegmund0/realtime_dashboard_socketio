<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script type=" text/javascript" src="js/materialize.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo">Categorias</a>
        </div>
    </nav>

    <ul id="slide-out" class="sidenav">
        <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
        <li><a href="#!">Second Link</a></li>
        <li>
            <div class="divider"></div>
        </li>
        <li><a class="subheader">Subheader</a></li>
        <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
    </ul>
    <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>

    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card col s12">
                    <div class="row">
                        <form class="col s12" action="/categorias/salvar" method="post">
                            <div class="row">
                                <div class="input-field col s6">
                                    <input placeholder="Descrição" id="descricao" name="descricao" required type="text"
                                        class="validate">
                                    <label for="first_name">Descrição</label>
                                </div>
                            </div>
                            <div class="row col s12">
                                <button class="btn waves-effect waves-light" id="button" type="submit" onclick="submit"
                                    name="action">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="fixed-action-btn">
            <a ref="#" class="btn-floating red btn-large">
                <i class="large material-icons">mode_edit</i>
            </a>
            <ul>
                <li><a ref="#" class="btn-floating blue btn-large"><i class="large material-icons">insert_chart</i></a>
                </li>
                <li><a ref="#" class="btn-floating green btn-large"><i
                            class="large material-icons">format_quotes</i></a></li>
                <li><a ref="#" class="btn-floating yellow btn-large"><i class="large material-icons">publish</i></a>
                </li>
                <li><a ref="#" class="btn-floating orange btn-large"><i class="large material-icons">attach_file</i></a>
                </li>
            </ul>
        </div>
    </div>

</body>

</html>